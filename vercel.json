{
  "version": 2,
  "builds": [
    {
      "src": "api/server.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "api"
      }
    },
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/server.json" },
    { "src": ".*", "dest": "/index.html" }
  ]
}
